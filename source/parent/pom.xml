	<profiles>
		<profile>
			<!-- A profile to use for faster Android builds. This will skip the dex 
				phase. -->
			<id>fast-android-build</id>
			<build>
				<plugins>
					<plugin>
						<groupId>com.jayway.maven.plugins.android.generation2</groupId>
						<artifactId>maven-android-plugin</artifactId>
						<configuration>
							<generateApk>false</generateApk>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<!-- A profile to use for full Android builds. This will include the dex 
				phase. You don't normally have to specify this, but it might be used if you 
				want to override the fast-android-build profile. -->
			<id>full-android-build</id>
			<build>
				<plugins>
					<plugin>
						<groupId>com.jayway.maven.plugins.android.generation2</groupId>
						<artifactId>maven-android-plugin</artifactId>
						<configuration>
							<generateApk>true</generateApk>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>integration-build</id>
			<properties>
				<gae.application.version>stage</gae.application.version>
			</properties>
		</profile>
		<profile>
			<id>release-build</id>
			<activation>
				<property>
					<name>performRelease</name>
					<value>true</value>
				</property>
			</activation>
			<properties>
				<!-- When doing a release we'll be using the "zwooshi-prod" application. 
					This is to separate the datastore in the prod from the stage and test builds. -->
				<gae.application.identifier>zwooshi-prod
				</gae.application.identifier>

				<gae.application.version>release</gae.application.version>

				<!-- The production Facebook app id. User: sonyericssonsocial@gmail.com 
					App: life.contacts -->
				<facebook.appid>191761490856052</facebook.appid>

			</properties>
		</profile>
	</profiles>
