	<properties>
		<!-- Use UTF-8 for all source code and resources, instead of "System Default". -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<!-- This is just for "eclipse:eclipse" goal to always attempt downloading 
			sources -->
		<downloadSources>true</downloadSources>

		<!-- The version of the Maven compiler plugin to use. -->
		<maven.compiler.plugin.version>2.3.2</maven.compiler.plugin.version>

		<!-- Specify AppEngine version for your project. It should match SDK version 
			pointed to by ${gae.home} property (Typically, one used by your Eclipse plug-in) -->
		<gae.version>1.4.3</gae.version>

		<!-- The version of the Maven GAE plugin. -->
		<maven.gae.version>0.8.4</maven.gae.version>

		<!-- The GAE application to use. For test and integration builds we're 
			using "zwooshi-dev", and for release builds we're using "zwooshi-prod". -->
		<gae.application.identifier>zwooshi-dev</gae.application.identifier>

		<!-- Upload to http://test.latest.<applicationName>.appspot.com by default -->
		<gae.application.version>test</gae.application.version>

		<!-- port defaults to 8080 -->
		<gae.port>8080</gae.port>

		<!-- The Maven provided appengine sdk. Run "mvn gae:unpack" to download 
			and install this. -->
		<gae.home>${user.home}/.m2/repository/com/google/appengine/appengine-java-sdk/${gae.version}/appengine-java-sdk-${gae.version}
		</gae.home>

		<!-- The Facebook app id to use. This is the development id; when in release 
			mode a different one should be used. -->
		<facebook.appid>173779107098</facebook.appid>

		<!-- The version of Spring to use. -->
		<org.springframework.version>3.0.5.RELEASE
		</org.springframework.version>

		<!-- The version of Spring to use for features which lag behind. Normally 
			one point release behind org.springframework.version. -->
		<org.springframework.version.lag-behind>3.0.4.RELEASE
