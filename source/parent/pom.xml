	<repositories>
		<!-- zwooshi repositories are declared here to fetch built artifacts of 
			our fork of Facebook Android SDK. If the Nexus server ever becomes unavailable, 
			you can build the facebook artifact directly from the relevant release tag 
			in the github repo: https://github.com/zwooshi/facebook-android-sdk-wip Then 
			choose the release tag which corresponds to the facebook-android-sdk artifact 
			version you depend on. -->
		<repository>
			<id>zwooshi-releases</id>
			<url>http://46.51.174.205:8081/nexus/content/repositories/releases</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>zwooshi-snapshots</id>
			<url>http://46.51.174.205:8081/nexus/content/repositories/snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<pluginRepositories>
